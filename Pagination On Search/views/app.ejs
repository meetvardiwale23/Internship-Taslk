<html>
    <head>
         <title>Search Data</title>
    </head>
<style>

 body{
    background-color:rgb(100, 85, 199);
 }
 #data_table{
    overflow:scroll;
    height: 100px;
    background-color: aliceblue;
 }
 td{
    height: 30px;
    width: 100px ;
 }
</style>
<body>
        <div> 
            <form>
            <div id="search_div" style="display:flex; justify-content:center;">
            <input type="text" placeholder="Search" id="srch_string" name="search_string" style="width: 200px; height: 30px;"  value="<%= search_string %>">
            <input type="submit" id="srch_btn"  placeholder="GO">
            </div>
            </form>
        </div>
      
        <h2 style="display:flex; justify-content:center; color: white;">
                Total Number Of Records :<%= search_data.length%>
        </h2>
        <div id="tables" style="display:flex; justify-content:center; width:70%; margin:auto;">
            <table border=5; style="height: 20px;   background-color: whitesmoke;">
                <tr>
                    <td>Use ^firstname</td>
                </tr>
                <tr>
                    <td>Use $lastname</td>
                </tr>
                <tr>
                    <td>Use *Date Of Birth</td>
                </tr>
                <tr>
                    <td>Use #email</td>
                </tr>
                <tr>
                    <td>Use &city</td>
                </tr>
                <tr>
                    <td>Use %college</td>
                </tr>
            </table>
            <table border="5" id="data_table"  >
                <tr border="4">
                        <th>  Student ID </th>
                        <th>  First Name </th>
                        <th>  Last Name </th>
                        <th>  Email </th>
                        <th>  City </th>
                        <th>  college </th>
                </tr>
          
                    <% for(let i=0; i<search_data.length;i++){ %>
                        
                    <tr>
                        <% if (search_data[i]) { %>
                            <td><%= search_data[i].student_id %></td>
                            <td><%= search_data[i].first_name %></td>
                            <td><%= search_data[i].last_name %></td>
                            <td><%= search_data[i].email %></td>
                            <td><%= search_data[i].city %></td>
                            <td><%= search_data[i].college %></td>
                        <% } %>               </tr>
                    <% } %>
                    
                </table>
            </div>
            
        
        
            
    



</body>
</html>
