                                        <%= console.log("tgy",edit_state_data[i].state_name)%>
                                        <%= edit_state_data[i].state_name %>
                                    </option>
                                
                                    <% }%>
                                <% } %>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label> Gender </label>
                        </td>

                        <td>
                            <input type="radio" id="basic_detail_male" name="gender" value="<%= basic_glob_data[i].gender %>">
                            <label> Male </label>

                            <input type="radio" id="basic_detail_female" name="gender" value="<%= basic_glob_data[i].gender %>">
                            <label> Female </label>

                            <input type="radio" id="basic_detail_other" name="gender" value="<%= basic_glob_data[i].gender %>">
