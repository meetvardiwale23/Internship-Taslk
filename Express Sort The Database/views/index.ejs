<html>
    <head>
         <title>data showing</title>
    </head>
<style>

    #dynamiclink{
        margin: auto;
        background-color: black;
        width: 100%;
        height:400px;
    }
    a{
        float: left;
        padding: 8px 16px;
    }
    #dy_component{
        height: 20px;
        width: 20px;
        padding:5px 10px;
        border: 1px solid black;
        background-color: white;
    }
    #tables{
        display:flex; 
        justify-content:center;
        background-color:black;
        
    }
    #tbl_details{
        color: white;
        font-size: 15px;
    }
    #text{
        display:flex; 
        justify-content:center;
        background-color:black;
        color: white;
    }
    
    #dynamicPage{
        color: white;
    }
</style>
<body>
        <div id="text">
        <h1 style="display:flex; justify-content:center;">Pagination Concept Using Express</h1>    
        </div>
        <div id="tables" >

        <table border="1" id="tbl_details" >
            <tr>
                    <th> <a id="dynamicPage" href="/getdata/?page=1&col_nm=student_id&order=<%= order %>"> Student ID </a> </th>
                    <th> <a id="dynamicPage" href="/getdata/?page=1&col_nm=first_name&order=<%= order %>"> First Name </a></th>
                    <th> <a id="dynamicPage" href="/getdata/?page=1&col_nm=last_name&order=<%= order %>"> Last Name </a></th>
                    <th> <a id="dynamicPage" href="/getdata/?page=1&col_nm=date_of_birth&order=<%= order %>"> Date Of Birth </a></th>
                    <th> <a id="dynamicPage" href="/getdata/?page=1&col_nm=email&order=<%= order %>"> Email </a></th>
                    <th> <a id="dynamicPage" href="/getdata/?page=1&col_nm=city&order=<%= order %>"> City </a></th>
                    <th> <a id="dynamicPage" href="/getdata/?page=1&col_nm=college&order=<%= order %>"> college </a></th>
            </tr>
                <% for(let i=0; i<20;i++){ %>
                <tr>
                    <% if (dataArr[i]) { %>
                        <td><%=  dataArr[i].student_id %></td>
                        <td><%=   dataArr[i].first_name %></td>
                        <td><%=  dataArr[i].last_name %></td>
                        <td><%=   dataArr[i].date_of_birth.toJSON().slice(0, 10); %></td>
                        <td><%=   dataArr[i].email %></td>
                        <td><%=   dataArr[i].city %></td>
                        <td><%=   dataArr[i].college %></td>
                    <% } %>
                </tr>
                <% } %>
                
            </table>
        </div>


        <div id="dynamiclink">
            <% for(let i=1;i<=counter;i++){ %>

                        <a id="dy_component" href="/getdata/?page=<%= i%>&col_nm=<%= col_nm%>"><%= i %></a>  |
        
            <% } %>
        </div>

</body>
</html>
