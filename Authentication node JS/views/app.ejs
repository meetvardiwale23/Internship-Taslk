    }

</style>
<body>
        <div class="sitewrapper">
            
            <div class="formelemet">
                <div class="logo">
                    <img src="/authentication-task/logo.svg">
                </div>
                <div class="title">
                    <h1>Welcome Back</h1>
                </div>
                
                <form action="/submit" method="post">
                        <div class="name_div">
                            <label class="label_name">Name</label><br>
                            <input type="text" class="name"  name="name" placeholder="enter your name">
                        </div>

                        <div class="email_div">
                            <label class="label_name">email</label><br>
                            <input type="text" class="email"  name="email" placeholder="enter your email">
                        </div>

                        <div class="password_div">
                            <label class="label_name">Password</label><br>
                            <input type="password" id="password" class="password" onchange="checkPassword()" name="password" placeholder="enter your password">
                            <label id="err_mssg" style="color: aliceblue;"></label>
                        </div>

                        <div class="conform_password_div">
                            <label class="label_name">conform password</label><br>
                            <input type="password" id="conform_password" class="conform_password" name="conform_password" placeholder="enter your password">
                        </div>

                        <div class="btn">
                            <input type="submit" value="Sign Up" class="signUp" onclick="return submitForm() ">
                        </div>
                        <div class="dont_have">
                            <p style="color:aliceblue"> Already have n account? <a href="/login" style="color: orange;">Sign in here</a> </p>
                        </div>
                </form>
            </div>
            <div class="footer_logo">
                <img src="/authentication-task/bottom-logo.png">                
            </div>

        </div>
        
</body>

